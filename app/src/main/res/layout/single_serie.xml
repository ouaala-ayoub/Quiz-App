<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/one_serie"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp"
    android:clickable="true"
    android:focusable="true"
    tools:ignore="DuplicateClickableBoundsCheck">

    <androidx.cardview.widget.CardView
        android:id="@+id/single_serie_quest"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/checked_download"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center|end"
            android:layout_marginEnd="20dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/download" />

        <TextView
            android:id="@+id/serie_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gay_shit"
            android:gravity="center|top"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/serie_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/beautiful_red"
            android:textSize="20sp"
            android:textStyle="italic"
            tools:text="5" />

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginStart="15dp"
            android:background="@drawable/single_serie_back"
            android:gravity="start"
            android:textColor="@color/beautiful_red"
            tools:text="0/40" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>